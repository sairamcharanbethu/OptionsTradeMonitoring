# Database Configuration
DATABASE_URL=postgres://user:password@cloud-db-host:5432/dbname
BACKUP_DATABASE_URL=postgres://user:password@db:5432/options_monitoring

# Docker Internal Database (Matches docker-compose.yml)
POSTGRES_DB=options_monitoring
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Security
JWT_SECRET=your_super_secret_jwt_key_here

# Market Data Providers (Optional/Future use)
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=

# Automation & Alerts
N8N_ALERT_WEBHOOK_URL=https://your-n8n-instance.com/webhook/alert
MARKET_DATA_POLL_INTERVAL="*/15 * * * *"

# AI Service (Optional defaults provided in code)
OLLAMA_URL=http://host.docker.internal:11434
AI_MODEL=mistral:7b-instruct-q4_K_M

# System
PORT=3001
NODE_ENV=production
